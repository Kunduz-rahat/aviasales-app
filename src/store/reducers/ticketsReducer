const inicialState = {
  isLoading: true,
  tickets: [],
};

export const ticketsReducer = (state = inicialState, action) => {
  switch (action.type) {
    case "TICKETS_REQUEST":
      return { ...state, isLoading: true };
    case "TICKETS_SUCCESS":
      return { ...state, isLoading: false, tickets: action.payload };
    case "TICKETS_FAILED":
      return { ...state, isLoading: false, error: action.payload };
    default:
      return state;
  }
};
